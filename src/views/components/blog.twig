{% extends "views/layouts/master.twig" %}

{% block content %}
    <div class="container py-8 md:py-16">
        <h1 class="text-3xl font-bold mb-8 text-center">{{ trans('pages.blog.title') }}</h1>

        {% if posts.data|length %}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {% for post in posts.data %}
                    {% include 'views/components/blog-post-card.twig' with {'post': post} %}
                {% endfor %}
            </div>

            <salla-pagination links="{{ posts.links|json_encode }}" class="mt-12"></salla-pagination>
        {% else %}
            <div class="text-center py-20">
                <i class="sicon-file-text text-7xl text-gray-300"></i>
                <h2 class="text-2xl font-bold mt-4">{{ trans('pages.blog.no_posts') }}</h2>
                <p class="text-gray-500">{{ trans('pages.blog.no_posts_description') }}</p>
            </div>
        {% endif %}
    </div>
{% endblock %}