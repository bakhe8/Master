<div class="bg-white rounded-lg shadow-md overflow-hidden group">
    <a href="{{ post.url }}" class="block overflow-hidden">
        <img src="{{ post.image.url | default(asset('images/placeholder.png')) }}" alt="{{ post.image.alt | default(post.title) }}" class="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-105">
    </a>
    <div class="p-6">
        <div class="text-sm text-gray-500 mb-2">
            <span>{{ trans('pages.post.by') }} {{ post.author_name }}</span>
            <span class="mx-2">|</span>
            <span>{{ post.published_at|date('d M, Y') }}</span>
        </div>
        <h3 class="text-xl font-bold mb-2">
            <a href="{{ post.url }}" class="hover:text-primary">{{ post.title }}</a>
        </h3>
        <p class="text-gray-600 line-clamp-3 mb-4">{{ post.content|striptags|slice(0, 120) }}...</p>
        <a href="{{ post.url }}" class="font-bold text-primary hover:underline">{{ trans('pages.blog.read_more') }}</a>
    </div>
</div>