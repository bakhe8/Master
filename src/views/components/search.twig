{% extends "views/layouts/master.twig" %}

{% block content %}
    <div class="container py-8 md:py-16">
        <salla-products-list>
            {% if request.q %}
                <h1 class="text-2xl font-bold mb-8">{{ trans('pages.search.title', {'query': request.q}) }}</h1>
            {% endif %}

            {% if products.data|length %}
                <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 md:gap-6">
                    {% for product in products.data %}
                        {% include 'views/components/product-grid.twig' with {'product': product} %}
                    {% endfor %}
                </div>

                <salla-pagination links="{{ products.links|json_encode }}" class="mt-12"></salla-pagination>
            {% else %}
                <div class="text-center py-20">
                    <i class="sicon-search-error text-7xl text-gray-300"></i>
                    <h2 class="text-2xl font-bold mt-4">{{ trans('pages.search.no_results') }}</h2>
                    <p class="text-gray-500">{{ trans('pages.search.no_results_description') }}</p>
                </div>
            {% endif %}
        </salla-products-list>
    </div>
{% endblock %}