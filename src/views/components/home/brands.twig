{#
    Beto Theme - Brands Carousel Component
    --------------------------------------
    Displays a carousel of brand logos.
    Driven by the 'home.brands' component in twilight.json.
#}

{% set title = component.fields.title.value %}
{% set brands = component.fields.brands.value %}

{% if brands|length %}
    <section class="container py-12 md:py-20">
        {% if title %}
            <h2 class="text-2xl font-bold text-center mb-8 dark:text-white">{{ title }}</h2>
        {% endif %}

        <div class="swiper-container brands-slider">
            <div class="swiper-wrapper">
                {% for brand in brands %}
                    <div class="swiper-slide text-center">
                        <a href="{{ brand.url }}" class="inline-block p-4">
                            <img src="{{ brand.logo }}" alt="{{ brand.name }}" class="h-16 max-w-full object-contain grayscale transition-all duration-300 hover:grayscale-0">
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endif %}