{# NeedsBoxes Offers with countdown and editable slider #}
<section id="offers" class="py-12 bg-[var(--accent-ultralight)] dark:bg-gray-900/50">
  <div class="container mx-auto px-4">
    <div class="flex flex-col lg:flex-row items-center justify-between gap-4 lg:gap-8 mb-8">
      <div class="text-center lg:text-right space-y-2">
        <span class="inline-flex items-center gap-2 text-xs uppercase tracking-[0.3em] font-semibold text-[var(--accent-orange-dark)] bg-white/60 dark:bg-white/10 px-3 py-1 rounded-full">
          {{ trans('common.needsboxes.offers_badge')|default('عرض الأسبوع') }}
        </span>
        <h2 class="text-3xl font-extrabold salla-section-title inline-block pb-2">
          {{ trans('common.needsboxes.offers_title')|default('صندوق العروض الحصرية') }}
        </h2>
        <p class="text-sm sm:text-base text-gray-600 dark:text-gray-300 max-w-xl">
          {{ trans('common.needsboxes.offers_subtitle')|default('احصل على صناديق Needs Boxes المختارة بخصومات محدودة الوقت مع شحن سريع داخل المملكة.') }}
        </p>
      </div>
      {% set deadline = theme.settings.get('needsboxes_offers_deadline') %}
      <div id="nb-countdown" {% if deadline %}data-deadline="{{ deadline }}"{% endif %} class="flex flex-wrap items-center justify-center gap-2 text-sm font-semibold text-[var(--primary-dark)] dark:text-white" aria-label="{{ trans('common.needsboxes.countdown_label')|default('الوقت المتبقي للعرض') }}">
        <div class="flex flex-col items-center bg-white dark:bg-white/10 border border-[var(--accent-coral)]/30 rounded-2xl px-3 py-2 min-w-[72px]">
          <span class="text-2xl" data-nb="d">00</span>
          <small class="text-xs tracking-wide text-gray-500 dark:text-gray-300">{{ trans('common.needsboxes.countdown_days')|default('يوم') }}</small>
        </div>
        <div class="flex flex-col items-center bg-white dark:bg-white/10 border border-[var(--accent-coral)]/30 rounded-2xl px-3 py-2 min-w-[72px]">
          <span class="text-2xl" data-nb="h">00</span>
          <small class="text-xs tracking-wide text-gray-500 dark:text-gray-300">{{ trans('common.needsboxes.countdown_hours')|default('ساعة') }}</small>
        </div>
        <div class="flex flex-col items-center bg-white dark:bg-white/10 border border-[var(--accent-coral)]/30 rounded-2xl px-3 py-2 min-w-[72px]">
          <span class="text-2xl" data-nb="m">00</span>
          <small class="text-xs tracking-wide text-gray-500 dark:text-gray-300">{{ trans('common.needsboxes.countdown_minutes')|default('دقيقة') }}</small>
        </div>
        <div class="flex flex-col items-center bg-white dark:bg-white/10 border border-[var(--accent-coral)]/30 rounded-2xl px-3 py-2 min-w-[72px]">
          <span class="text-2xl" data-nb="s">00</span>
          <small class="text-xs tracking-wide text-gray-500 dark:text-gray-300">{{ trans('common.needsboxes.countdown_seconds')|default('ثانية') }}</small>
        </div>
      </div>
    </div>
    <salla-slider pagination class="rounded-3xl overflow-hidden shadow-soft"></salla-slider>
  </div>
</section>
