{# NeedsBoxes Contact #}
<section id="contact" class="py-12">
  <div class="container mx-auto px-4">
    <h2 class="text-2xl font-extrabold mb-6 salla-section-title text-center">تواصل معنا</h2>
    <div class="grid md:grid-cols-2 gap-6 mt-8">
      <div class="bg-white dark:bg-gray-800 rounded-2xl p-4 border dark:border-white/10 shadow-soft space-y-3">
        <salla-contacts></salla-contacts>
      </div>
      <div class="bg-white dark:bg-gray-800 rounded-2xl p-4 border dark:border-white/10 shadow-soft space-y-3">
        <p class="flex items-center gap-2"><i class="fa-solid fa-phone text-[var(--accent-coral)]"></i> {{ store.contacts.mobile ?? store.contacts.phone }}</p>
        <p class="flex items-center gap-2"><i class="fa-brands fa-whatsapp text-green-500"></i> واتساب متاح</p>
        <p class="flex items-center gap-2"><i class="fa-solid fa-location-dot text-[var(--accent-coral)]"></i> {{ store.address ?? 'المملكة العربية السعودية' }}</p>
      </div>
    </div>
  </div>
</section>
