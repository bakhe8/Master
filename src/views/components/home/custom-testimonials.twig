{#
    Beto Theme - Custom Testimonials Component
    ------------------------------------------
    Displays a carousel of customer testimonials.
    Driven by the 'home.custom-testimonials' component in twilight.json.
#}

{% set items = component.fields.items.value %}

{% if items|length %}
    <section class="container py-12 md:py-20">
        {# The `swiper-container` class is the hook for the JavaScript slider initialization #}
        <div class="swiper-container testimonials-slider">
            <div class="swiper-wrapper">
                {% for item in items %}
                    <div class="swiper-slide">
                        <div class="testimonial-card text-center max-w-lg mx-auto p-4">
                            <img src="{{ item.avatar }}" alt="{{ item.name }}" class="w-20 h-20 rounded-full mx-auto mb-4 object-cover shadow-md">
                            <h4 class="font-bold text-lg mb-1 dark:text-white">{{ item.name }}</h4>
                            <salla-rating rate="{{ item.stars }}" size="small"></salla-rating>
                            <p class="text-gray-600 dark:text-gray-300 mt-4 italic">"{{ item.text }}"</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="swiper-pagination !relative mt-8"></div>
        </div>
    </section>
{% endif %}