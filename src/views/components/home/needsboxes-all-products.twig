{# NeedsBoxes All products with simple UI; renders latest products #}
<section id="all-products" class="py-12 bg-white/60 dark:bg-black/10">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row items-center justify-between gap-3 mb-5">
      <div class="flex items-center gap-2 flex-wrap justify-center">
        <button class="product-filter-btn px-3 py-1.5 rounded-full active-filter" data-nb-filter="all">الكل</button>
        <button class="product-filter-btn px-3 py-1.5 rounded-full" data-nb-filter="audio">صوتيات</button>
        <button class="product-filter-btn px-3 py-1.5 rounded-full" data-nb-filter="lighting">إضاءة</button>
        <button class="product-filter-btn px-3 py-1.5 rounded-full" data-nb-filter="charging">شحن</button>
        <button class="product-filter-btn px-3 py-1.5 rounded-full" data-nb-filter="accessory">اكسسوارات</button>
      </div>
      <div class="flex flex-col sm:flex-row items-center gap-3">
        <select id="nb-sort" class="px-3 py-2 rounded-xl border dark:border-white/10 dark:bg-gray-700 w-full sm:w-auto" aria-label="فرز المنتجات">
          <option value="pop">الأكثر رواجًا</option>
          <option value="priceAsc">السعر: من الأقل للأعلى</option>
          <option value="priceDesc">السعر: من الأعلى للأقل</option>
          <option value="new">الأحدث</option>
        </select>
        <div class="flex items-center gap-2">
          <input id="nb-price-min" type="number" min="0" placeholder="أقل سعر" class="px-3 py-2 rounded-xl border dark:border-white/10 dark:bg-gray-700 w-28" aria-label="أقل سعر">
          <input id="nb-price-max" type="number" min="0" placeholder="أعلى سعر" class="px-3 py-2 rounded-xl border dark:border-white/10 dark:bg-gray-700 w-28" aria-label="أعلى سعر">
        </div>
      </div>
    </div>
    <salla-products-list source="latest"></salla-products-list>
  </div>
</section>
