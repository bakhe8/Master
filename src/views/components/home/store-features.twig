{#
    Beto Theme - Store Features (Benefits) Component
    ------------------------------------------------
    Displays a list of store benefits like shipping, support, etc.
    Driven by the built-in 'component-store-features' from Salla.
#}

{% set title = component.fields.title.value %}
{% set description = component.fields.description.value %}
{% set items = component.fields.items.value %}

{% if items|length %}
    <section class="container py-12 md:py-20">
        {# Section Header #}
        <div class="text-center mb-10">
            {% if title %}
                <h2 class="text-2xl md:text-3xl font-bold mb-2 dark:text-white">{{ title }}</h2>
            {% endif %}
            {% if description %}
                <p class="text-gray-600 dark:text-gray-300 max-w-lg mx-auto">{{ description }}</p>
            {% endif %}
        </div>

        {# Features Grid #}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
            {% for item in items %}
                <div class="feature-card text-center">
                    <i class="{{ item.icon }} text-5xl text-primary mb-4"></i>
                    <h3 class="text-xl font-bold mb-2 dark:text-white">{{ item.title }}</h3>
                    <p class="text-gray-600 dark:text-gray-400 text-sm">{{ item.description }}</p>
                </div>
            {% endfor %}
        </div>
    </section>
{% endif %}