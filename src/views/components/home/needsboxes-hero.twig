{# NeedsBoxes Hero Section #}
<section id="hero" class="relative overflow-hidden bg-hero text-white">
  <div class="absolute inset-0 pointer-events-none">
    <div class="absolute inset-0 bg-stripe opacity-10"></div>
    <div class="absolute -top-40 -left-32 w-80 h-80 rounded-full bg-white/10 blur-3xl"></div>
    <div class="absolute bottom-10 right-10 w-48 h-48 rounded-3xl border border-white/10 rotate-12"></div>
  </div>
  <div class="relative max-w-screen-xl mx-auto px-4 sm:px-6 py-20 sm:py-24 lg:py-28">
    <div class="flex flex-col lg:flex-row items-center gap-10 lg:gap-16">
      <div class="w-full lg:w-1/2 text-center lg:text-right space-y-6">
        <span class="inline-flex items-center gap-2 uppercase tracking-[0.35em] text-xs font-semibold bg-white/10 border border-white/20 px-4 py-1 rounded-full self-center lg:self-end">
          {{ trans('common.needsboxes.badge_label')|default('Needs Boxes') }}
        </span>
        <div>
          <h1 class="text-3xl sm:text-5xl font-black leading-tight">
            {{ trans('common.needsboxes.hero_headline')|default('Needs Boxes') }}
          </h1>
          <p class="text-lg sm:text-2xl font-semibold text-white/85 mt-2">
            {{ trans('common.needsboxes.hero_subheadline')|default('اكتشف احتياجك في كل صندوق') }}
          </p>
        </div>
        <p class="text-base sm:text-lg text-white/85 leading-relaxed">
          {{ trans('common.needsboxes.hero_copy')|default('نجمع لك أفضل الملحقات التقنية بعناية في صناديق جاهزة تلائم اهتماماتك، من الصوتيات إلى الشحن الذكي والمزيد.') }}
        </p>
        <div class="flex flex-wrap justify-center lg:justify-end gap-3">
          <a href="#featured-products" class="inline-flex items-center gap-2 bg-white text-[var(--primary-dark)] px-6 py-3 rounded-2xl font-bold shadow-coral transition-transform duration-200 hover:-translate-y-0.5">
            {{ trans('common.needsboxes.cta_primary')|default('تسوق الصناديق المميزة') }}
            <i class="fa-solid fa-arrow-left-long text-[var(--accent-orange-dark)]"></i>
          </a>
          <a href="#categories" class="inline-flex items-center gap-2 px-6 py-3 rounded-2xl border border-white/40 text-white/90 hover:bg-white/10 transition-colors duration-200">
            <i class="fa-solid fa-box-open"></i>
            {{ trans('common.needsboxes.cta_secondary')|default('تصفح الفئات') }}
          </a>
        </div>
        <ul class="grid grid-cols-2 gap-3 text-sm text-white/90">
          <li class="flex items-center gap-2 bg-white/5 rounded-2xl px-3 py-3">
            <i class="fa-solid fa-gem text-[var(--accent-coral)]"></i>
            {{ trans('common.needsboxes.pillar_curated')|default('تشكيلات مختارة بعناية') }}
          </li>
          <li class="flex items-center gap-2 bg-white/5 rounded-2xl px-3 py-3">
            <i class="fa-solid fa-certificate text-[var(--accent-coral)]"></i>
            {{ trans('common.needsboxes.pillar_trusted_brands')|default('علامات موثوقة وضمان أصلي') }}
          </li>
          <li class="flex items-center gap-2 bg-white/5 rounded-2xl px-3 py-3">
            <i class="fa-solid fa-truck-fast text-[var(--accent-coral)]"></i>
            {{ trans('common.needsboxes.pillar_express_delivery')|default('توصيل سريع داخل المملكة') }}
          </li>
          <li class="flex items-center gap-2 bg-white/5 rounded-2xl px-3 py-3">
            <i class="fa-solid fa-headset text-[var(--accent-coral)]"></i>
            {{ trans('common.needsboxes.pillar_support')|default('دعم مرافق بعد الشراء') }}
          </li>
        </ul>
      </div>
      <div class="w-full lg:w-1/2">
        <div class="relative max-w-md mx-auto bg-white/10 backdrop-blur-xl rounded-3xl border border-white/20 p-6 sm:p-8 shadow-soft">
          <div class="absolute -top-6 -right-6 w-16 h-16 rounded-3xl bg-white/15"></div>
          {% if store.logo %}
            <img src="{{ store.logo }}" alt="{{ trans('common.elements.logo_alt')|default('شعار المتجر') }}" class="relative mx-auto max-h-40 object-contain drop-shadow-lg">
          {% else %}
            <div class="needsbox-logo relative mx-auto w-24 h-16">
              <div class="needsbox-box">
                <div class="needsbox-item needsbox-usb"></div>
                <div class="needsbox-item needsbox-bulb"></div>
                <div class="needsbox-item needsbox-headphones"></div>
              </div>
            </div>
          {% endif %}
          <p class="text-white/80 text-sm mt-4">{{ trans('common.needsboxes.hero_badge')|default('صندوق الاحتياجات – هدايا تقنية جاهزة للاستخدام فورًا') }}</p>
          <div class="mt-6 grid grid-cols-2 gap-3 text-xs text-white/80">
            <div class="rounded-2xl border border-white/20 px-3 py-3 bg-white/5">
              <p class="font-semibold text-white">{{ trans('common.needsboxes.hero_stat_one_label')|default('داخل كل صندوق') }}</p>
              <p>{{ trans('common.needsboxes.hero_stat_one_value')|default('شاحن ذكي + صوتيات') }}</p>
            </div>
            <div class="rounded-2xl border border-white/20 px-3 py-3 bg-white/5">
              <p class="font-semibold text-white">{{ trans('common.needsboxes.hero_stat_two_label')|default('لمسة مفاجأة') }}</p>
              <p>{{ trans('common.needsboxes.hero_stat_two_value')|default('ملحق إضافي مجاني') }}</p>
            </div>
            <div class="rounded-2xl border border-white/20 px-3 py-3 bg-white/5">
              <p class="font-semibold text-white">{{ trans('common.needsboxes.hero_stat_three_label')|default('ضمان الجودة') }}</p>
              <p>{{ trans('common.needsboxes.hero_stat_three_value')|default('منتجات أصلية 100%') }}</p>
            </div>
            <div class="rounded-2xl border border-white/20 px-3 py-3 bg-white/5">
              <p class="font-semibold text-white">{{ trans('common.needsboxes.hero_stat_four_label')|default('دعم فني') }}</p>
              <p>{{ trans('common.needsboxes.hero_stat_four_value')|default('مرافقة بعد الشراء') }}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
