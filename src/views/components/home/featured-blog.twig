{#
    Beto Theme - Featured Blog Posts Component
    ------------------------------------------
    Displays a selection of blog posts on the homepage.
    Driven by the 'home.featured-blog' component in twilight.json.
#}

{% set title = component.fields.title.value %}
{% set description = component.fields.description.value %}
{% set selected_posts = component.fields.posts.value %}

{# If no posts are selected in the theme editor, fetch the latest 3. Otherwise, use the selected ones. #}
{% set posts = selected_posts|length ? selected_posts : salla.blog.get({ 'limit': 3 }).data %}

{% if posts|length %}
    <section class="container py-12 md:py-20">
        {# Section Header #}
        <div class="text-center mb-8">
            {% if title %}
                <h2 class="text-2xl md:text-3xl font-bold mb-2 dark:text-white">{{ title }}</h2>
            {% endif %}
            {% if description %}
                <p class="text-gray-600 dark:text-gray-300 max-w-lg mx-auto">{{ description }}</p>
            {% endif %}
        </div>

        {# Posts Grid #}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for post in posts %}
                <div class="post-card group bg-white dark:bg-dark border border-light dark:border-darker rounded-lg overflow-hidden transition-shadow duration-300 hover:shadow-lg">
                    <a href="{{ post.url }}" class="block overflow-hidden">
                        <img src="{{ post.image }}" alt="{{ post.title }}" class="w-full h-56 object-cover transition-transform duration-500 group-hover:scale-105">
                    </a>
                    <div class="p-6">
                        <h3 class="text-xl font-bold mb-3 truncate">
                            <a href="{{ post.url }}" class="hover:text-primary dark:text-gray-200 dark:hover:text-primary">{{ post.title }}</a>
                        </h3>
                        <p class="text-gray-600 dark:text-gray-300 text-sm leading-relaxed h-20 overflow-hidden mb-4">{{ post.excerpt }}</p>
                        <a href="{{ post.url }}" class="font-bold text-primary hover:underline">{{ trans('pages.blog.read_more') }}</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endif %}