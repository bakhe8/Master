{#
    Beto Theme - Promo Bar Component
    --------------------------------
    An optional, dismissible announcement bar at the top of the site.
    Controlled by theme settings in twilight.json.
#}
{% if theme.settings.promo_bar_enabled and theme.settings.promo_bar_text %}
    <div id="promo-bar" class="bg-primary text-white text-sm relative transition-all duration-300">
        <div class="container flex items-center justify-center text-center h-10 px-10">
            {% set promo_link = theme.settings.promo_bar_link.url %}

            {% if promo_link %}
                <a href="{{ promo_link }}" class="hover:underline">
                    {{ theme.settings.promo_bar_text }}
                </a>
            {% else %}
                <span>{{ theme.settings.promo_bar_text }}</span>
            {% endif %}

            <button type="button" class="js-close-promo-bar absolute top-1/2 -translate-y-1/2 end-2 p-2 opacity-70 hover:opacity-100" aria-label="{{ trans('blocks.header.close_promo_bar') }}">
                <i class="sicon-close text-lg"></i>
            </button>
        </div>
    </div>
{% endif %}