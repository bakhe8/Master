{#
    Beto Theme - Scroll to Top Component
    ------------------------------------
    A button that appears when the user scrolls down, allowing them to
    smoothly return to the top of the page.
#}
{% if theme.settings.scroll_to_top_enabled %}
    <button id="scroll-to-top-btn"
            type="button"
            class="fixed bottom-5 end-5 z-10 bg-primary text-white rounded-full h-12 w-12 flex items-center justify-center shadow-lg opacity-0 translate-y-4 pointer-events-none transition-all duration-300"
            aria-label="{{ trans('common.scroll_to_top') }}">
        <i class="sicon-arrow-up text-xl"></i>
    </button>
{% endif %}