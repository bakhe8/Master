{% extends "views/layouts/master.twig" %}

{% block content %}
    <div class="container py-8 md:py-12">
        {% if not cart.isEmpty %}
            <h1 class="text-2xl md:text-3xl font-bold text-gray-800 dark:text-white mb-8">{{ trans('pages.cart.shopping_cart') }}</h1>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-12">
                {# Cart Items Details #}
                <div class="lg:col-span-2">
                    <salla-cart-details></salla-cart-details>
                </div>

                {# Cart Summary #}
                <div>
                    <div class="bg-gray-50 dark:bg-dark p-6 rounded-lg sticky top-24">
                        <h2 class="text-xl font-bold mb-4">{{ trans('pages.cart.cart_total') }}</h2>
                        <salla-cart-summary-details></salla-cart-summary-details>
                    </div>
                </div>
            </div>
        {% else %}
            {# Empty Cart State #}
            <div class="text-center py-20">
                <i class="sicon-shopping-bag text-7xl text-gray-300 dark:text-gray-600 mb-4"></i>
                <h2 class="text-2xl font-bold mb-2">{{ trans('pages.cart.empty_cart') }}</h2>
                <p class="text-gray-600 dark:text-gray-400 mb-6">{{ trans('pages.cart.empty_cart_description') }}</p>
                <a href="{{ store.url }}" class="s-button-primary">
                    {{ trans('pages.cart.continue_shopping') }}
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}