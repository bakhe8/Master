{% extends "views/layouts/master.twig" %}

{% block content %}
    {#
        Dynamically render the homepage components.
        The order and content are controlled from the Salla Theme Editor.
        The `salla.config.get('theme.components')` function retrieves the
        list of active components for the homepage.
    #}
    {% set components = salla.config.get('theme.components') %}

    {% for component in components %}
        {# The `component.path` (e.g., "home.brands") is converted to a file path. #}
        {% include "views/components/" ~ component.path|replace({'.': '/'}) ~ ".twig" with { component: component } %}
    {% endfor %}
{% endblock %}