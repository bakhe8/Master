/**
 * @salla/ui-components
 * The `salla-accordion` component represents an accordion element.
 * Use this component to encapsulate content within a collapsible section.
 */
export declare class SallaAccordion {
    /** Reference to the host element. */
    host: HTMLElement;
    /** Should the accordion be collapsible or not. Default is true. */
    collapsible: boolean;
    bordered: boolean;
    size: "sm" | "md" | "lg";
    /** Detect if accordion collapsed or not. */
    collapsed: boolean;
    /** Represents the direction of the layout. */
    dir: string;
    directionChangedHandler(event: CustomEvent): void;
    handleCollapse(event: CustomEvent): void;
    private setcollapsibleProp;
    componentDidRender(): void;
    render(): any;
}
